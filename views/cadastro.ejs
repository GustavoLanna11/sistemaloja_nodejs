<%- include('partials/header.ejs')%>
<%- include('partials/navbar.ejs')%>

<% if (messages.danger) { %>
    <div class="alert alert-danger flash">
        <%= messages.danger %>
    </div>
<% } %>

<div class="container">
    <div class="card mt-4">
        <div class="card-header">
            <h2>Cadastro de usuário</h2>
        </div>
        <div class="card-body ">
            <p style="color: red; font-size: 0.7rem;">Você precisa estar logado para acessar os recursos do painel.</p>
        
        <form action="/createUser" method="POST">
            <label for="">E-mail:</label>
            <input class="form-control" id="email" name="email" placeholder="email@exemplo.com" type="email" required><br>
            <label for="">Senha:</label>
            <input class="form-control" id="password" name="password" placeholder="Insira uma senha com no mínimo 8 caracteres" type="password" required><br>
            <input type="submit" value="Cadastrar" class="btn btn-success btn-block">
        </form>
    
        <hr>
        <h6>Já possui conta? <a href="/login">Faça o Login!</a></h6>
    </div>
    </div>
</div>

